module Lrama
  class Grammar
    class Parameterized
      class Resolver
        attr_accessor rules: Array[Grammar::Parameterized::Rule]
        attr_accessor created_lhs_list: Array[Lexer::Token]

        @rules: Array[Grammar::Parameterized::Rule]

        def initialize: () -> void
        def add_parameterizing_rule: (Grammar::Parameterized::Rule rule) -> Array[Grammar::Parameterized::Rule]
        def find_rule: (Lexer::Token::InstantiateRule token) -> Grammar::Parameterized::Rule?
        def find_inline: (Lexer::Token token) -> Grammar::Parameterized::Rule?
        def created_lhs: (String lhs_s_value) -> Lexer::Token?

        private

        def select_rules: (Array[Grammar::Parameterized::Rule] rules, Lexer::Token::InstantiateRule token) -> Array[Grammar::Parameterized::Rule]
        def reject_inline_rules: (Array[Grammar::Parameterized::Rule] rules) -> Array[Grammar::Parameterized::Rule]
        def select_rules_by_name: (Array[Grammar::Parameterized::Rule] rules, String rule_name) -> Array[Grammar::Parameterized::Rule]
      end
    end
  end
end
